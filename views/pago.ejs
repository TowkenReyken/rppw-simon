<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Proceso de Pago | Supermercado Simón</title>
  <link rel="stylesheet" href="/css/pago.css">
</head>
<body>
  <%- include('partials/header') %>

  <section class="pago-container">
    <h1>Proceso de Pago</h1>
    <div class="productos-pago">
      <table>
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Descuento</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody id="tabla-productos">
          <!-- Los productos se llenarán dinámicamente -->
        </tbody>
      </table>
    </div>
    <div class="resumen-pago">
      <h2>Total a Pagar: <span id="total-pago">$0</span></h2>
      <button id="btn-confirmar-pago">Confirmar Compra</button>
    </div>

    <!-- Modal para confirmar compra -->
<div id="modal-confirmar" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Confirmar Compra</h2>
        <form id="confirmar-compra-form" enctype="multipart/form-data">
            <div class="form-group">
                <label for="cliente-nombre">Nombre:</label>
                <input type="text" id="cliente-nombre" required>
            </div>
            
            <div class="form-group">
                <label for="cliente-direccion">Dirección:</label>
                <input type="text" id="cliente-direccion" required>
            </div>

            <div class="form-group">
                <label for="cliente-correo">Correo electrónico:</label>
                <input type="email" id="cliente-correo" required>
            </div>
            
            <div class="form-group">
                <label for="cliente-telefono">Teléfono:</label>
                <input type="tel" id="cliente-telefono" required>
            </div>
            
            <div class="form-group">
                <label for="metodo-pago">Método de Pago:</label>
                <select id="metodo-pago" required>
                    <option value="">Seleccione un método</option>
                    <option value="Fisico">Pago Físico</option>
                    <option value="Transferencia">Transferencia</option>
                </select>
            </div>
            
            <div id="comprobante-container" class="form-group" style="display: none;">
                <label for="comprobante">
                    <i class="fas fa-upload"></i> 
                    Comprobante de Transferencia:
                </label>
                <input type="file" id="comprobante" accept=".jpg,.jpeg,.png,.pdf">
                <small>Formatos permitidos: JPG, PNG, PDF. Máximo 5MB.</small>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-confirmar">
                    <i class="fas fa-check"></i> 
                    Confirmar Pedido
                </button>
                <button type="button" class="btn-cancelar">
                    <i class="fas fa-times"></i> 
                    Cancelar
                </button>
            </div>
        </form>
    </div>
</div>
  </section>

  <%- include('partials/footer') %>

  <script src="/js/pago.js"></script>
</body>
</html>